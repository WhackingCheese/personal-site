<%- include('../margins/head.ejs'); -%>
<%- include('../margins/header.ejs'); -%>
<div class="cv">
    <div class="cv__inner">
        <div class="cv__card">
            <div class="cv__card__inner">
                <% if (locals.course_draw) { %>
                    <%- include('../fragments/courses.ejs'); -%>
                <% } else { %>
                    <%- include('../fragments/profile.ejs'); -%>
                    <div class="cvitem__container">
                        <%- include('../fragments/cvitem.ejs', {datashard: data.education}); -%>
                        <div class="cvitem">
                            <div class="cvitem__innerhead">
                                <h3 class="cvitem__header"><%= data.projects.title[lang] %></h3>
                                <% data.cv.list_project.forEach(id => { %>
                                <% data.projects.data.forEach(type => { %>
                                <% type.data.forEach(project => { %>
                                <% if(id == project.id) { %>
                                    <%- include('../fragments/project.ejs', {project: project}) -%>
                                <% } %>
                                <% }); %>
                                <% }); %>
                                <% }); %>
                                <a href="/projects<%= hreftail %>">
                                    <p class="projects__seeall"><%= data.projects.see_all[lang] %></p>
                                </a>
                            </div>
                        </div>
                        <%- include('../fragments/cvitem.ejs', {datashard: data.experience}); -%>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('../margins/footer.ejs'); -%>
<%- include('../margins/tail.ejs'); -%>